{
  "compilerOptions": {
    "module": "es6",
    "target": "ESNext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "baseUrl": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}